rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all collections for simplicity during initial dev.
    // Replace with more specific rules for production.
    match /{document=**} {
      allow read, write: if true;
    }

    // Specific, more secure rules for the 'images' collection
    match /images/{imageId} {
      // Anyone can create an image metadata document (e.g., after an upload)
      allow create: if true;
      
      // Only the user who uploaded the image can read or delete its metadata.
      // This prevents users from accessing or deleting each other's image records.
      allow read, delete: if request.auth != null && request.auth.uid == resource.data.uploaderId;

      // No one can update an image document after it's created.
      allow update: if false;
    }
  }
}
