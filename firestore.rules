rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow public read on tournaments, teams, organizations, sponsors, and matches
    match /tournaments/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    match /teams/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /organizations/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /sponsors/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /matches/{docId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    
    // Allow users to read and manage their own data
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permissions
    match /rolePermissions/{role} {
        allow read: if true;
        allow write: if request.auth != null; // Admin/Super can write
    }
    
    // Image metadata
    match /images/{imageId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.uploaderId;
    }

  }
}
