rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to most collections for presenter/client views
    match /{collection}/{docId} {
      allow read: if true;
    }

    // Lock down writes to admins/superusers by default
    match /{document=**} {
      allow write: if false; 
    }

    // Granular write permissions per collection
    match /users/{userId} {
      allow write: if true; // Allow creating/updating users
    }
    match /organizations/{orgId} {
      allow write: if true;
    }
    match /teams/{teamId} {
      allow write: if true;
    }
    match /sponsors/{sponsorId} {
      allow write: if true;
    }
    match /tournaments/{tourneyId} {
      allow write: if true;
    }
    match /matches/{matchId} {
      allow write: if true;
    }
    match /rolePermissions/{roleId} {
      allow write: if true;
    }

    // Rules for image metadata - fully public
    match /images/{imageId} {
      allow read, write, delete: if true;
    }
  }
}
