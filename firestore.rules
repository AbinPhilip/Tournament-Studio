rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to users for login, but block writes.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can change user data
    }

    // Protect all other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
