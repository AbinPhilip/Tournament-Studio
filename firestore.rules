rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Collections that are public for reading for the Presenter View
    match /tournaments/{docId} {
      allow get, list: if true;
    }
    match /matches/{docId} {
      allow get, list: if true;
    }
    match /teams/{docId} {
      allow get, list: if true;
    }
    match /organizations/{docId} {
      allow get, list: if true;
    }
    match /sponsors/{docId} {
      allow get, list: if true;
    }

    // All collections are writable only by authenticated users.
    // Further role-based checks can be added inside these blocks if needed.
    match /tournaments/{docId} {
        allow write: if request.auth != null;
    }
    match /matches/{docId} {
        allow write: if request.auth != null;
    }
    match /teams/{docId} {
        allow write: if request.auth != null;
    }
    match /organizations/{docId} {
        allow write: if request.auth != null;
    }
    match /sponsors/{docId} {
        allow write: if request.auth != null;
    }
    match /rolePermissions/{docId} {
        allow write: if request.auth != null;
    }
     match /users/{userId} {
        allow write: if request.auth != null;
    }

    // Permissions and user data can be read by any authenticated user.
    match /rolePermissions/{role} {
       allow read: if request.auth != null;
    }
    match /users/{userId} {
      allow read: if request.auth != null;
    }
  }
}
