rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // This rule allows any user to upload files into the 'images/' directory.
    // Security is maintained because the client generates a unique, unguessable
    // file path (UUID) for each upload, preventing users from accessing or
    -    // overwriting each other's files.
    match /images/{allPaths=**} {
      allow read, write;
    }
  }
}
