rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow public read access to all images
    match /images/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow anyone to upload to the images folder.
    // Security is handled by unique filenames (UUIDs) in the app logic
    // and Firestore rules protecting the metadata.
    match /images/{userId}/{allPaths=**} {
        allow write: if true;
    }
  }
}
