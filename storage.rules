rules_version = '2';

// By default, deny all reads and writes
service firebase.storage {
  match /b/{bucket}/o {
    // Grant read access to everyone for all files.
    // This is necessary for the public Presenter View to display images.
    match /{allPaths=**} {
      allow read;
    }

    // Allow uploads to specific folders for authenticated users.
    // This prevents unauthorized users from uploading files.
    match /event-logo/{imageId} {
      allow write: if request.auth != null;
    }
    match /sponsors/{imageId} {
      allow write: if request.auth != null;
    }
    match /event-images/{imageId} {
      allow write: if request.auth != null;
    }
  }
}
