rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read;
    }

    // Allow anyone to upload to the public images directory.
    match /images/public/{allPaths=**} {
      allow write: if true;
    }
    
    // Allow anyone to delete from the public images directory.
    // Note: Security for deletion should be handled by your application logic,
    // for instance, by checking a secret or ownership in Firestore before performing the delete operation.
    match /images/{allPaths=**} {
       allow delete: if true;
    }
  }
}
