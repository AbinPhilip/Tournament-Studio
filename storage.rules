
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow any authenticated user to upload to the images folder.
    // The path guarantees that files are stored in a user-specific folder.
    match /images/{userId}/{allPaths=**} {
      allow read; // Allow public read access to all images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
