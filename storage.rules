
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the "images" directory
    match /images/{userId}/{allPaths=**} {
      // Allow reads from anyone
      allow read: if true;
      // Allow writes only if the user is authenticated and the userId in the path matches their uid
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow deletes only by the user who uploaded it
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
