rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes only to the 'images' folder for authenticated users
    match /images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
