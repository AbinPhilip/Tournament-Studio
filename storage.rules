rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files by default
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow a logged-in user to write to a path under their own user ID.
    // This prevents users from overwriting each other's files.
    // The client generates a unique UUID for the filename, so the user can't guess and overwrite their own files either.
    match /images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
