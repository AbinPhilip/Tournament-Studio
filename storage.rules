rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow users to write to their own folder if their user document exists in Firestore.
    // This aligns with the custom auth system instead of relying on request.auth,
    // which is null because the app doesn't use Firebase Auth for sign-in sessions.
    match /images/{userId}/{allPaths=**} {
      allow write: if exists(/databases/$(database)/documents/users/$(userId));
    }
  }
}
