rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Default deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow logged-in users to upload to their own folder within 'images'.
    // The client will construct a path like /images/{userId}/{uuid}-{fileName}
    match /images/{userId}/{fileName} {
      allow read: if true; // Images are public to read
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
