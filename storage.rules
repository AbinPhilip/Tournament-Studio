rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files so images can be displayed
    // in the app by anyone.
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access (uploads, updates, deletes) only for
    // authenticated users.
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
