rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on all files.
    match /{allPaths=**} {
      allow read;
    }
    // Allow any client to write to the images folder.
    // Security is handled by using unique IDs for filenames in the app
    // and by Firestore rules protecting the metadata.
    match /images/{allPaths=**} {
      allow write;
    }
  }
}
