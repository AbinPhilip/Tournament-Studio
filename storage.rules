rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to all files
    match /{allPaths=**} {
        allow read: if true;
    }
    
    // Allow authorized users to write to their own folder in 'images'
    match /images/{userId}/{allPaths=**} {
      allow write: if exists(/databases/$(database)/documents/users/$(userId));
    }
  }
}
