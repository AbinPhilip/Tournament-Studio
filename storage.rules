rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all images, as they are meant to be displayed.
    // Allow write access only to the 'images' folder.
    // Security is enforced by using unguessable, unique filenames (UUIDs)
    // generated by the client application, which prevents unauthorized overwrites or access.
    match /images/{allPaths=**} {
      allow read;
      allow write: if true;
    }
  }
}
