rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the images folder
    match /images/{userId}/{allPaths=**} {
      // Allow read access to everyone
      allow read;
      // Allow write access only if the user is authenticated and their UID matches the userId in the path
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to all other paths that are not in the 'images' folder.
    // This is useful for other potential files in your bucket.
    match /{path=**} {
      // The condition ensures this rule does not apply to the /images path,
      // which is handled by the more specific rule above.
      allow read: if path[0] != 'images';
    }
  }
}
